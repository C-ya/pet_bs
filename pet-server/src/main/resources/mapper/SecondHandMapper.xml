    <select id="selectSecondHandVOByQueryForm" resultMap="ResultMapWithUserAndResource">
        SELECT
        <include refid="Second_Hand_Column_List"/>,
        <include refid="User_Column_List"/>,
        <include refid="Resource_Column_List"/>
        FROM second_hand
        LEFT JOIN user ON second_hand.user_id = user.id
        LEFT JOIN resource ON second_hand.resource_id = resource.id
        <where>
            <if test="form.userId != null and form.secondHandCategory == '我的'">
                second_hand.user_id = #{form.userId}
            </if>
             <if test="(form.userId != 1 and form.userId != 4 and form.userId != 9 ) and form.secondHandCategory != '我的'">
                second_hand.state=1
            </if>
<!--            <if test="form.secondHandCategory != null">-->
<!--                AND second_hand.second_hand_category = #{form.secondHandCategory}-->
<!--            </if>-->
            <if test="form.general != null">
                AND (second_hand.title LIKE CONCAT("%",#{form.general},"%")
                OR second_hand.name LIKE CONCAT("%",#{form.general},"%")
                OR second_hand.address LIKE CONCAT("%",#{form.general},"%")
                OR second_hand.description LIKE CONCAT("%",#{form.general},"%"))
            </if>
        </where>
